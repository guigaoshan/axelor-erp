<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">

  <!-- VIEW -->
  <grid name="server-type-grid" title="Server types">
    <field name="name" />
    <field name="shortName" />
  </grid>

  <form name="server-type-form" title="Server type" cols="4">
  	<field name="name" required="true" />
  	<field name="shortName" />
  </form>

  <!-- MENU -->
  <menuitem name="menu-server-type" title="Server types" action="action-view-server-type" parent="menu-network-configuration"/>

  <action-view name="action-view-server-type" title="Server types" model="com.axelor.apps.network.db.ServerType" icon="img/16px/parameterSmall_16px.png">
  	  <view type="grid" name="server-type-grid"/>
  	  <view type="form" name="server-type-form"/>
  </action-view>
    
</object-views>
