<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">

  <!-- VIEW -->
  <grid name="server-application-grid" title="Server applications">
    <field name="server" />
    <field name="customer" />
    <field name="name" />
    <field name="url" widget="url" />
  </grid>

  <form name="server-application-form" title="Server application" cols="4">
    <field name="server" form-view="server-form" grid-view="server-grid" required="true"/>
    <break/>
    <field name="partner" grid-view="partner-grid" form-view="partner-form" />
  	<field name="name" />
  	<field name="domain" domain="self.server = :server" />
  	<field name="context" />
  	<field name="port" />
  	<field name="usePortInUrl" />
  	<field name="url" widget="url" colSpan="4"/>
    <separator colSpan="4" title="Informations"/>
    <field name="information" showTitle="false" colSpan="4" widget="html" />
  </form>

  <!-- MENU -->
  <menuitem name="menu-server-application" title="Server applications" action="action-view-server-application" parent="menu-network-root" priority="98"/>

  <action-view name="action-view-server-application" title="Server applications" model="com.axelor.apps.network.db.ServerApplication" icon="img/16px/folder-network.png">
  	  <view type="grid" name="server-application-grid"/>
  	  <view type="form" name="server-application-form"/>
  </action-view>

</object-views>
